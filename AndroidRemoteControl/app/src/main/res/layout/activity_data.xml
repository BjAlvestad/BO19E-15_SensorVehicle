<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataActivity">

    <Button
        android:id="@+id/button_getSensorData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="56dp"
        android:onClick="onClick_getSensorData"
        android:text="Get sensor data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_getSensorData"
        app:layout_constraintStart_toStartOf="parent">
        <CheckBox
            android:id="@+id/checkBox_wheels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onClick_ComponentCheckBox"
            android:text="Wheels" />
        <CheckBox
            android:id="@+id/checkBox_ultrasound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onClick_ComponentCheckBox"
            android:text="Ultrasound" />
        <CheckBox
            android:id="@+id/checkBox_lidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_ComponentCheckBox"
            android:text="Lidar" />
        <CheckBox
            android:id="@+id/checkBox_encoder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick_ComponentCheckBox"
            android:text="Encoder" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>